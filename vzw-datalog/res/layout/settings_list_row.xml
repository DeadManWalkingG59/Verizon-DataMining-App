<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/settings_row_nametextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/settings_row_descriptiontextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/settings_row_nametextView"
            android:layout_below="@+id/settings_row_nametextView"
            android:text="TextView"
            android:textColor="#7bb2d6"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/settings_row_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/settings_row_nametextView"
            android:clickable="false"
            android:focusable="false" />
    </RelativeLayout>

</LinearLayout>